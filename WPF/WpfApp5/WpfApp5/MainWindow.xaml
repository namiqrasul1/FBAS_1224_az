    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding Cars}" FontSize="16" Margin="0,0,5,0" MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="200" Header="Vendor">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Vendor, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="200" Header="Model">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Model, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="200" Header="Year">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Column="1">
            <Label FontSize="20" Content="Vendor: "/>
            <TextBox FontSize="20" Height="50" Text="{Binding MyCar.Vendor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <Label FontSize="20" Content="Model: "/>
            <TextBox FontSize="20" Height="50" Text="{Binding MyCar.Model, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            <Label FontSize="20" Content="Year: "/>
            <TextBox FontSize="20" Height="50" Text="{Binding MyCar.Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

            <Button FontSize="20" Height="50" Width="200" Content="Add Car" Name="AddBtn" Click="AddBtn_Click"></Button>
        </StackPanel>

    </Grid>

</Window>
